<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'admin.title'|trans }}{% endblock %}</title>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    {% block stylesheets %}
      {{ include('DematimbreAdminAppBundle::stylesheets.html.twig') }}
    {% endblock %}
  </head>
  <body class="{% block body_class '' %}">
    <main id="container">
      {% block header %}
      <header class="header">
        <!-- logo -->
{#         <a href="{{ path('exp_home') }}" class="logo">
          <img src="{{ asset('/bundles/gescoadminapp/img/logo.png') }}" alt="Expertam">
        </a> #}
        <!-- /logo -->
        <div class="top-nav pull-left">
          <!-- search & user info -->
          <ul class="nav pull-right top-menu">
            <!-- user login dropdown -->
            {# {{ include('GescoAdminAppBundle:Includes:user_toolbar.html.twig') }} #}
            <!-- /user login dropdown -->
{#             <li class="global-search">
              <form method="GET" action="#">
                <input type="text" class="form-control search" placeholder="{{ 'NÂ° Dossier'|trans }}" />
              </form>
            </li> #}
          </ul>
          <div class="clearfix"></div>
          {% block breadcrumbs %}
          <ul class="breadcrumb">
          {% block inactive_breadcrumbs %}{% endblock %}
          {% block active_breadcrumb %}{% endblock %}
          </ul>
          {% endblock %}
          <!-- /search & user info -->
        </div>
      </header>
      {% endblock %}
      <div class="content">
        {% block container %}
        <section id="main-content" class="col-lg-12">
          {% block notifications %}{% endblock %}
          {% block main %}
          <div class="row">
            <div class="col-lg-12">{% block content '' %}</div>
          </div>
          {% endblock %}
        </section>
        {% endblock %}
      </div>
      {% block footer '' %}
    </main>

    {% block javascripts %}
      <div id="modals">
        {% block modals '' %}
      </div>
      <script id="js_templates" type="text/template">
        {% block js_templates '' %}
      </script>
      {{ include('DematimbreAdminAppBundle::javascripts.html.twig') }}
    {% endblock %}
  </body>
</html>
